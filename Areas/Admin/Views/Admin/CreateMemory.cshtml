@model FamilyMemories.Models.ViewModels.Admin.EditMemoryViewModel
@{
    ViewData["Title"] = "新增回憶";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">新增回憶</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="/Admin">首頁</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Admin/Memories">回憶管理</a></li>
                    <li class="breadcrumb-item active">新增</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">新增回憶資訊</h3>
                    </div>
                    <form asp-action="CreateMemory" method="post" enctype="multipart/form-data" id="createMemoryForm">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Title">標題</label>
                                <input type="text" class="form-control" asp-for="Title" required>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">描述</label>
                                <textarea class="form-control" rows="4" asp-for="Description" required></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Date">日期</label>
                                <input type="date" class="form-control" asp-for="Date" required>
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Image">圖片</label>
                                <input type="file" class="form-control" name="Image" id="Image" accept="image/*" required>
                                <span class="text-danger" id="imageError"></span>
                                <small class="form-text text-muted">選擇的檔案：<span id="fileName">未選擇檔案</span></small>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary" id="submitBtn">新增</button>
                            <a href="/Admin/Admin/Memories" class="btn btn-secondary">取消</a>
                        </div>
                    </form>
                    
                    <script>
                        // 顯示選擇的檔案名稱
                        document.getElementById('Image').addEventListener('change', function(e) {
                            const fileName = e.target.files[0]?.name || '未選擇檔案';
                            document.getElementById('fileName').textContent = fileName;
                            console.log('已選擇檔案:', fileName);
                        });
                        
                        // 監聽表單送出
                        document.getElementById('createMemoryForm').addEventListener('submit', function(e) {
                            const submitBtn = document.getElementById('submitBtn');
                            const fileInput = document.getElementById('Image');
                            
                            console.log('=== 表單送出資訊 ===');
                            console.log('標題:', document.querySelector('[name="Title"]').value);
                            console.log('描述:', document.querySelector('[name="Description"]').value);
                            console.log('日期:', document.querySelector('[name="Date"]').value);
                            console.log('檔案:', fileInput.files[0]?.name);
                            console.log('表單 Action:', this.action);
                            console.log('表單 Method:', this.method);
                            console.log('==================');
                            
                            // 禁用按鈕防止重複送出
                            submitBtn.disabled = true;
                            submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> 上傳中...';
                        });
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>
