@using FamilyMemories.Data
@inject ApplicationDbContext DbContext
<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - 後台管理</title>
    
    <!-- AdminLTE CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <!-- Custom Admin CSS -->
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                        <i class="bi bi-list"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Admin" class="nav-link">首頁</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/" class="nav-link" target="_blank">前台網站</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Theme Toggle -->
                <li class="nav-item">
                    <a class="nav-link" href="#" id="themeToggle" title="切換主題">
                        <i class="bi bi-moon-stars" id="themeIcon"></i>
                    </a>
                </li>
                
                <!-- User Account -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i> @User.Identity?.Name
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="/Identity/Account/Manage">個人設定</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                                <button type="submit" class="dropdown-item">登出</button>
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/Admin" class="brand-link">
                <i class="bi bi-house-heart brand-image"></i>
                <span class="brand-text font-weight-light">家庭回憶</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <i class="bi bi-person-circle" style="font-size: 2rem; color: #fff;"></i>
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@User.Identity?.Name</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a href="/Admin" class="nav-link">
                                <i class="nav-icon bi bi-speedometer2"></i>
                                <p>儀表板</p>
                            </a>
                        </li>

                        <!-- 使用者管理 -->
                        <li class="nav-item">
                            <a href="/Admin/UserManager" class="nav-link">
                                <i class="nav-icon bi bi-people"></i>
                                <p>使用者管理</p>
                            </a>
                        </li>

                        <!-- 角色管理 -->
                        <li class="nav-item">
                            <a href="/Admin/RoleManager" class="nav-link">
                                <i class="nav-icon bi bi-shield-check"></i>
                                <p>角色管理</p>
                            </a>
                        </li>

                        <!-- 回憶管理 -->
                        <li class="nav-item">
                            <a href="/Admin/Admin/Memories" class="nav-link">
                                <i class="nav-icon bi bi-images"></i>
                                <p>回憶管理</p>
                            </a>
                        </li>

                        <!-- 分隔線 -->
                        <li class="nav-header">系統</li>

                        <!-- 返回前台 -->
                        <li class="nav-item">
                            <a href="/" class="nav-link" target="_blank">
                                <i class="nav-icon bi bi-box-arrow-up-right"></i>
                                <p>返回前台</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2025 <a href="/">家庭回憶</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
    
    <!-- Theme Toggle Script -->
    <script>
        const THEME_KEY = 'admin-theme';
        const themeToggle = document.getElementById('themeToggle');
        const themeIcon = document.getElementById('themeIcon');
        
        function setTheme(theme) {
            if (theme === 'light') {
                document.body.classList.add('theme-light');
                themeIcon.className = 'bi bi-sun-fill';
            } else {
                document.body.classList.remove('theme-light');
                themeIcon.className = 'bi bi-moon-stars';
            }
            localStorage.setItem(THEME_KEY, theme);
        }
        
        // Load saved theme
        const savedTheme = localStorage.getItem(THEME_KEY) || 'dark';
        setTheme(savedTheme);
        
        // Toggle theme
        themeToggle.addEventListener('click', function(e) {
            e.preventDefault();
            const current = localStorage.getItem(THEME_KEY) || 'dark';
            setTheme(current === 'dark' ? 'light' : 'dark');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
