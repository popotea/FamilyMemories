@model IEnumerable<FamilyMemories.Models.Memory>

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row g-3">
    <div class="col-12 col-md-8">
        <div class="admin-card">
            <h4>Recent Memories</h4>
            <div class="row row-cols-1 row-cols-md-2 g-3 mt-2">
                @foreach (var m in Model.Take(6))
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="@(m.ImagePath?.StartsWith("http") == true ? m.ImagePath : Url.Content("~/uploads/" + m.ImagePath))" class="card-img-top" alt="@m.Title">
                            <div class="card-body">
                                <h5 class="card-title">@m.Title</h5>
                                <p class="card-text text-muted">@m.Description</p>
                                <p class="small text-muted">@m.Date.ToString("yyyy-MM-dd")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-12 col-md-4">
        <div class="admin-card">
            <h5>Quick Actions</h5>
            <div class="d-grid gap-2 mt-2">
                <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary">Manage Users</a>
                <a asp-controller="Admin" asp-action="Roles" class="btn btn-outline-secondary">Manage Roles</a>
                <a asp-page="/Memories/Create" class="btn btn-outline-success">Create Memory</a>
            </div>
        </div>

        <div class="admin-card mt-3">
            <h5>System Info</h5>
            <ul class="list-unstyled small text-muted">
                <li>Environment: @Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT")</li>
                <li>App Path: @AppContext.BaseDirectory</li>
            </ul>
        </div>
    </div>
</div>
