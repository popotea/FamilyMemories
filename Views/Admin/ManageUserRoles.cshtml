@model FamilyMemories.Models.ViewModels.UserRolesViewModel
@using Microsoft.EntityFrameworkCore

@{
    ViewData["Title"] = "管理使用者角色";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="ManageUserRoles">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label>使用者：@Model.UserName</label>
    </div>
    <div class="form-group">
        @foreach (var role in (await RoleManager.Roles.ToListAsync()))
        {
            <div class="form-check">
                <input type="checkbox" name="roles" value="@role.Name" class="form-check-input" @(Model.Roles.Contains(role.Name) ? "checked" : "") />
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">儲存</button>
</form>
@inject Microsoft.AspNetCore.Identity.RoleManager<FamilyMemories.Models.ApplicationRole> RoleManager
