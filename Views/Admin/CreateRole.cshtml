@{
    ViewData["Title"] = "建立角色";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole">
            <div class="form-group">
                <label for="roleName" class="control-label">角色名稱</label>
                <input name="roleName" class="form-control" />
            </div>
            <div class="form-group">
                <label for="description" class="control-label">描述</label>
                <input name="description" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="建立" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">返回列表</a>
</div>
