@model FamilyMemories.Models.ViewModels.Admin.EditUserRolesViewModel

@{
 ViewData["Title"] = "編輯使用者角色";
 Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-card">
 <h3>編輯使用者角色 - @Model.UserName</h3>
 <form asp-action="EditUserRoles" method="post" class="mt-3">
 <input asp-for="UserId" type="hidden" />
 <div class="row g-2">
 @for (int i =0; i < Model.Roles.Count; i++)
 {
 <div class="col-6 col-md-4">
 <div class="form-check">
 <input asp-for="Roles[i].IsSelected" class="form-check-input" id="role_@i" />
 <label class="form-check-label" for="role_@i">@Model.Roles[i].RoleName</label>
 </div>
 </div>
 }
 </div>
 <div class="mt-3">
 <button type="submit" class="btn btn-primary">儲存</button>
 <a asp-action="Users" class="btn btn-link">取消</a>
 </div>
 </form>
</div>
