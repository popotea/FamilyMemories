@model FamilyMemories.Models.ApplicationRole
@{
    ViewData["Title"] = "編輯角色權限";
    var allPermissions = ViewBag.AllPermissions as List<FamilyMemories.Models.Permission>;
    var currentPermissions = ViewBag.CurrentPermissions as List<FamilyMemories.Models.Permission>;
}

<h2>編輯角色權限 - @ViewBag.RoleName</h2>

<form asp-action="EditPermissions" method="post">
    <input type="hidden" name="id" value="@ViewBag.RoleId" />
    
    <div class="card">
        <div class="card-header">
            <h5>前台權限</h5>
        </div>
        <div class="card-body">
            @foreach (var permission in allPermissions.Where(p => ((int)p) < 100))
            {
                var isChecked = currentPermissions.Contains(permission);
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="permissions" value="@((int)permission)" id="perm_@((int)permission)" @(isChecked ? "checked" : "") />
                    <label class="form-check-label" for="perm_@((int)permission)">
                        @permission.ToString()
                    </label>
                </div>
            }
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h5>後台權限</h5>
        </div>
        <div class="card-body">
            @foreach (var permission in allPermissions.Where(p => ((int)p) >= 100))
            {
                var isChecked = currentPermissions.Contains(permission);
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="permissions" value="@((int)permission)" id="perm_@((int)permission)" @(isChecked ? "checked" : "") />
                    <label class="form-check-label" for="perm_@((int)permission)">
                        @permission.ToString()
                    </label>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">儲存</button>
        <a asp-action="Index" class="btn btn-secondary">返回</a>
    </div>
</form>
