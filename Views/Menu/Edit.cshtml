@model FamilyMemories.Models.Menu
@{
    ViewData["Title"] = "編輯選單";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="admin-card">
    <h3>編輯選單</h3>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ParentId" />
        <div class="mb-3">
            <label class="form-label">名稱</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">連結</label>
            <input asp-for="Url" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">排序</label>
            <input asp-for="SortOrder" class="form-control" type="number" />
        </div>
        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label class="form-check-label" asp-for="IsActive">啟用</label>
        </div>
        <button type="submit" class="btn btn-primary">儲存</button>
        <a asp-action="Index" class="btn btn-link">取消</a>
    </form>
</div>
