@model FamilyMemories.Models.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "當我們彤再一起";
    Layout = null;
    var photosJson = System.Text.Json.JsonSerializer.Serialize(
        Model.Photos.Select(p => new {
            id = p.Id,
            imageUrl = p.ImageUrl,
            member = p.Member,
            date = p.Date,
            title = p.Title,
            description = p.Description,
            userId = p.UserId
        })
    );
    var isAuthenticated = User?.Identity?.IsAuthenticated == true ? "true" : "false";
    var isAdmin = (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin")) ? "true" : "false";
    var currentUserId = Model.CurrentUserId ?? string.Empty;
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link rel="stylesheet" href="~/css/gallery.css" asp-append-version="true" />
    <style>
        /* Theme variables: default = dark theme, add `light` class on body for light theme */
        :root{
            --bg: #000000;
            --text: #ffffff;
            --muted: rgba(255,255,255,0.75);
            --tag-bg: rgba(255,255,255,0.12);
            --overlay-top: rgba(0,0,0,0.85);
            --overlay-mid: rgba(0,0,0,0.28);
        }
        body.light{
            --bg: #ffffff;
            --text: #0b1220;
            --muted: #6c757d;
            --tag-bg: rgba(0,0,0,0.06);
            --overlay-top: rgba(255,255,255,0.92);
            --overlay-mid: rgba(255,255,255,0.7);
        }

        /* Apply variables */
        body{
            background: var(--bg);
            color: var(--text);
            transition: background 220ms ease, color 220ms ease;
        }

        /* Photo card text follows theme */
        .photo-title {
            color: var(--text) !important;
        }
        .photo-date, .photo-member, .photo-description {
            color: var(--muted) !important;
        }
        .photo-tag {
            background: var(--tag-bg) !important;
            color: var(--text) !important;
        }

        /* Overlay uses variables to create readable gradient on both themes */
        .photo-overlay {
            background: linear-gradient(to top, var(--overlay-top), var(--overlay-mid), transparent) !important;
        }

        /* Modal info should also respect text colors */
        .modal-info,
        .modal-title,
        .modal-description,
        .modal-date {
            color: var(--text) !important;
        }
        .modal .modal-info { background: transparent; }

        /* Ensure links/buttons on cards remain visible */
        .photo-card .edit-btn svg { stroke: var(--text); }

        /* Admin quick button kept as-is */
        /* ...existing admin quick css... */
        .admin-quick-btn {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 60;
            width: 3.2rem;
            height: 3.2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: rgba(255,69,0,0.9);
            color: white;
            border-radius: 0.5rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
            text-decoration: none;
        }

        .admin-quick-btn:hover {
            transform: translateY(-2px);
        }

        .admin-quick-btn svg {
            width: 1.25rem;
            height: 1.25rem;
        }
    </style>
</head>
<body>
 <!-- 主題切換（明亮/黑暗） -->
    <button class="theme-toggle" id="themeToggle" title="切換主題" aria-label="切換主題">
        <!-- 預設圖示會由 JS 依主題切換 -->
        <svg id="themeToggleIcon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
        </svg>
    </button>
    <!-- 新增回憶按鈕 (只有登入用戶才顯示) -->
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <button class="add-memory-btn" id="addMemoryBtn" title="新增回憶">
            <svg class="icon-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
        </button>
    }

    <!-- 管理者快速入口 -->
    @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
    {
        <a href="/Admin" class="admin-quick-btn" title="管理後台" aria-label="管理後台">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M12.5 2.5a9.03 9.03 0 0 1 8.95 8.95A9.03 9.03 0 0 1 12.5 21a9.03 9.03 0 0 1-8.95-8.95A9.03 9.03 0 0 1 12.5 2.5zm0 2a7.03 7.03 0 0 0-6.364 9.636A7.03 7.03 0 0 0 12.5 19a7.03 7.03 0 0 0 6.364-9.636A7.03 7.03 0 0 0 12.5 4.5zm-.001 2a5.004 5.004 0 0 1 4.243 7.757A5.004 5.004 0 0 1 8.757 6.757 4.974 4.974 0 0 1 12.499 6.5z"></path>
            </svg>
        </a>
    }



    <!-- 頂部標題欄 -->
    <div class="header">
        <h1>當我們彤再一起</h1>
        <div class="filter-container" id="filterContainer">
            <!-- 篩選按鈕將由 JS 動態生成 -->
        </div>
    </div>

    <!-- 相片網格 -->
    <div class="gallery-container">
        <div class="gallery-grid" id="galleryGrid">
            <!-- 相片卡片將由 JS 動態生成 -->
        </div>
        <div class="empty-state" id="emptyState" style="display: none;">
            沒有找到相關回憶
        </div>
    </div>

    <!-- Modal 全螢幕檢視 -->
    <div class="modal" id="photoModal">
        <button class="modal-btn modal-close" id="modalClose">
            <svg class="icon-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
        <button class="modal-btn modal-prev" id="modalPrev">
            <svg class="icon-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
        </button>
        <button class="modal-btn modal-next" id="modalNext">
            <svg class="icon-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
        </button>

        <div class="modal-content">
            <div class="modal-image-container">
                <img class="modal-image" id="modalImage" src="" alt="">
            </div>
            <div class="modal-info">
                <div class="modal-member-tag">
                    <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    <span id="modalMember"></span>
                </div>
                <div class="modal-date">
                    <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <span id="modalDate"></span>
                </div>
                <h2 class="modal-title" id="modalTitle"></h2>
                <p class="modal-description" id="modalDescription"></p>
                <div class="modal-footer">
                    <span id="modalCounter"></span>
                    <svg class="icon-lg heart-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                    <!-- 編輯按鈕：只有登入使用者才渲染 -->
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <button class="btn btn-primary" id="modalEditBtn" title="編輯" style="margin-left:auto; display:none;">編輯</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Modal (僅登入使用者渲染) -->
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div class="modal" id="editModal">
            <div class="modal-content-edit">
                <button class="modal-btn modal-close" id="editModalClose">
                    <svg class="icon-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
                <h2 style="margin-bottom:1.5rem;">編輯回憶</h2>
                <form id="editForm" enctype="multipart/form-data">
                    <input type="hidden" id="editPhotoId">
                    <div class="form-group">
                        <label for="editTitle">標題</label>
                        <input type="text" id="editTitle" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="editDescription">描述</label>
                        <textarea id="editDescription" class="form-control" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <label>目前圖片</label>
                        <div style="margin-bottom:0.5rem;">
                            <img id="editCurrentImage" src="" alt="目前圖片" style="max-width:100%; max-height:200px; border-radius:0.5rem;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="editImage">更換圖片（選填）</label>
                        <input type="file" id="editImage" class="form-control" accept="image/*">
                        <small class="form-text text-muted">若不選擇檔案，將保留原有圖片</small>
                    </div>
                    <button type="submit" class="btn btn-primary">儲存</button>
                </form>
            </div>
        </div>

        <!-- Add Memory Modal -->
        <div class="modal" id="addModal">
            <div class="modal-content-edit">
                <button class="modal-btn modal-close" id="addModalClose">
                    <svg class="icon-lg" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
                <h2 style="margin-bottom:1.5rem;">新增回憶</h2>
                <form id="addForm" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="addTitle">標題</label>
                        <input type="text" id="addTitle" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="addDescription">描述</label>
                        <textarea id="addDescription" class="form-control" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="addImage">圖片</label>
                        <div id="uploadDropZone" class="upload-drop-zone">
                            <span id="uploadDropText">拖曳圖片到此或點擊選擇</span>
                            <input type="file" id="addImage" class="form-control upload-input" accept="image/*" required style="display:none;">
                            <img id="addPreview" src="" alt="預覽" style="display:none;max-width:100%;max-height:200px;margin-top:1rem;border-radius:0.5rem;box-shadow:0 2px 8px rgba(0,0,0,0.12);">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="addDate">日期</label>
                        <input type="date" id="addDate" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">新增</button>
                </form>
                <div id="addProgress" style="display:none;margin-top:1rem;">
                    <div class="progress" style="height:8px;background:#eee;border-radius:4px;">
                        <div class="progress-bar" id="addProgressBar" style="width:0%;height:8px;background:#007bff;border-radius:4px;"></div>
                    </div>
                    <span id="addProgressText" style="font-size:0.9rem;color:#888;margin-left:0.5rem;"></span>
                </div>
            </div>
        </div>
    }

    <!-- Toast 訊息 -->
    <div id="toast" style="position:fixed;top:2rem;right:2rem;z-index:9999;display:none;padding:1rem 2rem;background:#222;color:#fff;border-radius:0.5rem;box-shadow:0 2px 8px rgba(0,0,0,0.18);font-size:1.1rem;opacity:0.95;transition:opacity 0.3s;">
        <span id="toastMsg"></span>
    </div>

    <style>
        /* 上傳區美化 */
        .upload-drop-zone {
            border: 2px dashed #aaa;
            border-radius: 0.5rem;
            padding: 2rem 1rem;
            text-align: center;
            background: var(--bg);
            color: var(--muted);
            cursor: pointer;
            transition: border-color 0.2s, background 0.2s;
        }
        .upload-drop-zone.dragover {
            border-color: #007bff;
            background: rgba(0,123,255,0.08);
        }
        .upload-drop-zone:hover {
            border-color: #007bff;
        }
        .upload-input {
            display: none;
        }
        #addPreview {
            box-shadow: 0 2px 8px rgba(0,0,0,0.12);
        }
    </style>

    <!-- 注入資料到 window 物件供 JS 使用 -->
    <script>
        window.galleryPhotos = @Html.Raw(photosJson);
        window.isAuthenticated = '@isAuthenticated';
        window.isAdmin = '@isAdmin';
        window.currentUserId = '@currentUserId';
    </script>

    <!-- 引用外部 JS -->
    <script src="~/js/home-gallery.js" asp-append-version="true"></script>
</body>
</html>
