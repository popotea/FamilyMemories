@page "{id:int?}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Memory</h1>

<h3>Are you sure you want to delete this memory?</h3>
<div>
    <h4>Memory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Memory.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Memory.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Memory.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Memory.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Memory.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Memory.Date)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Memory.ImagePath))
            {
                <img src="~/uploads/@Model.Memory.ImagePath" alt="Memory image" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <span>No image</span>
            }
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Memory.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
